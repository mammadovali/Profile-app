@model EditProfileViewModel

<h2 class="alert alert-warning">Edit Profile</h2>

@if (ViewData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewData["ErrorMessage"]
    </div>
}

@if (ViewData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @ViewData["SuccessMessage"]
    </div>
}

<form asp-action="EditProfile" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="@Model.User.Name">First name</label>
        <input asp-for="@Model.User.Name" class="form-control" />
        <span asp-validation-for="@Model.User.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.User.Surname">First name</label>
        <input asp-for="@Model.User.Surname" class="form-control" />
        <span asp-validation-for="@Model.User.Surname" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.User.Email">Email</label>
        <input asp-for="@Model.User.Email" class="form-control" />
        <span asp-validation-for="@Model.User.Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.User.UserName">User name</label>
        <input asp-for="@Model.User.UserName" class="form-control" />
        <span asp-validation-for="@Model.User.UserName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.UserInfo.Location">Location</label>
        <input asp-for="@Model.UserInfo.Location" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="@Model.UserInfo.PhoneNumber">Phone number</label>
        <input asp-for="@Model.UserInfo.PhoneNumber" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="@Model.ProfilePictureUrl">Profile Picture</label>
        <input asp-for="@Model.ProfilePictureUrl" name="ProfilePicture" type="file" onchange="readURL(this);" class="form-control-file" accept=".jpg,.jpeg,.png" />
        <img src="~/uploads/images/@Model.ProfilePictureUrl?" id="preview" width="150" height="150" />
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="index" class="btn btn-success">Back to profile</a>
</form>

@section addjs {
<script>
    function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function (e) {
                $('#preview').attr('src', e.target.result);
            }
            reader.readAsDataURL(input.files[0]);
        }
    }
</script>
}

@section addcss{
<style>
    #preview {
        display: block;
        margin: 0 auto;
        width: 20rem;
        height: 20rem;
    }

    .form-group label{
        font-weight: 700;
    }
</style>
}
