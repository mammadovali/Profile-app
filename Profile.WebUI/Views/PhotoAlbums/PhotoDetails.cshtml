@model Photo

<div class="row" style="margin-top: 20px;">
    <div class="col-md-6 offset-md-3">
        <div class="card">
            <div class="card-body">
                <div class="single-img-container">
                    <div class="single-img">
                        <img src="~/uploads/images/@Model.Filename" class="img-fluid" />
                    </div>
                </div>

                <hr />
                <a asp-action="details" asp-route-id="@Model.PhotoAlbumId" class="btn btn-primary">Back to the album</a>
            </div>
        </div>
    </div>
</div>



@section addcss{
<style>
    .single-img-container {
        display: flex;
        justify-content: center;
    }

    .single-img {
        width: 12rem;
        height: 16rem;
        display: flex;
    }

        .single-img img {
            width: 100%;
            height: 100%;
        }

        .card-body a{
            width: 100%;
        }
</style>
}